<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" id="WebApp_ID" version="2.4">
  <display-name>RegistrationForm</display-name>
  <servlet>
    <display-name>myservlet1</display-name>
    <servlet-name>Form</servlet-name>
    <servlet-class>com.servlets.Form</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Form</servlet-name>
    <url-pattern>/Form</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <display-name>myservlet2</display-name>
    <servlet-name>ValidationCheck</servlet-name>
    <servlet-class>com.servlets.ValidationCheck</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ValidationCheck</servlet-name>
    <url-pattern>/ValidationCheck</url-pattern>
  </servlet-mapping>
  
  
  <welcome-file-list>
    <welcome-file>RegistrationForm.html</welcome-file>
  </welcome-file-list>
</web-app>